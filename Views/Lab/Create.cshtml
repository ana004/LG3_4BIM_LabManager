@model MvcLabManager.Models.Lab

@{
    ViewData["Title"] = "Criar novo laboratório";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Lab" asp-action="Create" method="post">
     <p>
        <label asp-for="Id">Id: </label>
        <input type="number" asp-for="Id">
        <span asp-validation-for="Id" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Number">Número: </label>
        <input type="number" asp-for="Number">
        <span asp-validation-for="Number" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Name">Nome: </label>
        <input type="text" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Block">Bloco: </label>
        <input type="text" asp-for="Block">
        <span asp-validation-for="Block" class="text-danger"></span>
    </p>

    <button type="submit">Criar</button>
</form>