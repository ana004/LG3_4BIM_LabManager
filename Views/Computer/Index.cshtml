@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computadores";
}
<h1>@ViewData["Title"]</h1>

<!--Lógica de View. View se comporta conforme estado do model-->
@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ram</th>
                <th>Processador</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <td>@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Show" asp-route-id="@computer.Id">Ver</a>
                        <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Update" asp-route-id="@computer.Id">Editar</a>
                        <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Delete" asp-route-id="@computer.Id">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
