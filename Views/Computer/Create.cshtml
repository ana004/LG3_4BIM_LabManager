@model MvcLabManager.Models.Computer

@{
    ViewData["Title"] = "Criar novo computador";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Computer" asp-action="Create" method="post">
    <p>
        <label asp-for="Id">Id: </label>
        <input type="number" asp-for="Id">
        <span asp-validation-for="Id" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Ram">Ram: </label>
        <input type="text" asp-for="Ram">
        <span asp-validation-for="Ram" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Processor">Processador: </label>
        <input type="text" asp-for="Processor">
        <span asp-validation-for="Processor" class="text-danger"></span>
    </p>

    <button type="submit">Criar</button>
</form>